<html>
  <head>
    <title>Todo App</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
    <style>
      body {
        font-family: 'Roboto', sans-serif;
        background-color: #f0f8ff;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .container {
        width: 350px;
        background-color: #fff;
        padding: 20px 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
      }

      .todo-header {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
      }

      #addTask p {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin: 0;
      }

      input[type="text"] {
        padding: 12px;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 1em;
        width: 100%;
      }

      button {
        padding: 10px;
        background-color: #007bff;
        border: none;
        border-radius: 6px;
        color: #fff;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #0056b3;
      }

      h3 {
        margin-bottom: 10px;
        color: #555;
      }

      ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
      }

      ul li {
        background-color: #f4f4f4;
        padding: 12px;
        margin-bottom: 8px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-radius: 6px;
      }

      ul li label {
        flex: 1;
        padding-left: 8px;
        font-size: 0.95em;
      }

      .edit, .delete {
        background-color: transparent;
        border: none;
        color: #007bff;
        font-weight: bold;
        cursor: pointer;
        transition: color 0.3s ease;
      }

      .edit:hover {
        color: #fff;
      }

      .delete:hover {
        color: #fff;
        background-color: #b80000;
      }

      .completed label {
        text-decoration: line-through;
        color: #888;
      }

      input[type="checkbox"] {
        width: 20px;
        height: 20px;
        margin-right: 8px;
      }

      #incomplete-tasks, #completed-tasks {
        max-height: 200px;
        overflow-y: auto;
      }

      .no-tasks {
        text-align: center;
        color: #999;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="todo-header">To-Do List</h1>
      <form id="addTask">
        <p>
          <input name="title" id="new-task-title" placeholder="Task Title" type="text">
          <input name="desc" id="new-task-desc" placeholder="Task Description" type="text">
          <input type="hidden" id="task-id" name="taskId">
          <button id="submit-button" type="submit"><b>Add Task</b></button>
        </p>
      </form>

      <h3>Todo</h3>
      <ul id="incomplete-tasks">
        <% if (incompleteTasks.length !== 0) { %>
        <% incompleteTasks.forEach(task => { %>
          <li>
            <input type="checkbox" class="task-checkbox">
            <label><%= task.title %>: <small style="color: #818181;"><%= task.description %></small></label>
            <button class="edit" data-task-id="<%= task.id %>">Edit</button>
            <button class="delete" data-task-id="<%= task.id %>">Delete</button>
          </li>
        <% }) %>
        <% } else { %>
          <li class="no-tasks">No pending tasks!</li>
        <% } %>
      </ul>

      <h3>Completed</h3>
      <ul id="completed-tasks">
        <% if (completedTasks.length !== 0) { %>
        <% completedTasks.forEach(task => { %>
          <li class="completed">
            <input type="checkbox" class="task-checkbox" checked>
            <label><%= task.title %>: <small style="color: #818181;"><%= task.description %></small></label>
            <button class="delete" data-task-id="<%= task.id %>">Delete</button>
          </li>
        <% }) %>
        <% } else { %>
          <li class="no-tasks">No completed tasks!</li>
        <% } %>
      </ul>
    </div>

    <script type="text/javascript" src="/static/script.js"></script>
  </body>
</html>
